<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/text1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHi"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="32dp"
        android:text="Hi Admin"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/text2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSub"
        android:layout_below="@id/textViewHi"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        android:text="Admin Management"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:textColor="@color/text2"/>

    <ImageView
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:id="@+id/peronProfile"
        android:src="@drawable/sharp_restaurant_24"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"/>

    <EditText
        android:id="@+id/searchFood"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/peronProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/text3"
        android:hint="Search Your Favorite"
        android:inputType="textPersonName|textCapWords"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/text1"
        android:textColorHint="@color/text1"
        android:textStyle="italic" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addFabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/secondary"
        android:src="@drawable/baseline_add_24"
        app:elevation="6dp"
        app:fabSize="normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="30dp"
        android:layout_below="@id/searchFood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

</RelativeLayout>